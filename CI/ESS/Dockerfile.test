# Check out https://hub.docker.com/_/node to select a new base image
FROM node:10-slim

RUN apt-get update && apt-get install -y --no-install-recommends mongodb-clients vim

ENV PORT 3030
EXPOSE 3030

WORKDIR /usr/src/app
COPY package.json /usr/src/app/
# Install our packages
RUN npm install --no-optional

# Start the app
CMD ["./wait.sh"]
