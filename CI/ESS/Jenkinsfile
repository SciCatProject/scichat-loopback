node('docker') {
  stage('Checkout'){
    checkout scm
  }
  stage('Build Docker'){
    withCredentials([ usernamePassword(credentialsId: 'dockerhubess',usernameVariable: 'docker_user',passwordVariable: 'docker_password' )]) {
      sh 'docker login -u essdmscdm -p $docker_password '
      def IMAGE_ID = sh ( script: 'git rev-parse HEAD',returnStdout: true).trim()
      sh "docker build --file CI/ESS/Dockerfile.proxy . --tag dacat/scichat-loopback:latest -t dacat/scichat-loopback:${IMAGE_ID}dev"
      echo "Git image id : ${IMAGE_ID}"
    }
  }
  stage('Production Build'){
      if (env.BRANCH_NAME == 'master'){
            def IMAGE_ID = sh ( script: 'git rev-parse HEAD',returnStdout: true).trim()
      sh "docker build --file CI/ESS/Dockerfile.proxy . --tag dacat/scichat-loopback:latest -t dacat/scichat-loopback:${IMAGE_ID}dev"
      echo "Git image id : ${IMAGE_ID}"
      sh "docker push dacat/scichat-loopback:${IMAGE_ID}dev"
      sh "docker push dacat/scichat-loopback:latest"
      sh "docker rmi dacat/scichat-loopback:${IMAGE_ID}dev"
      }
  }
}

